<?xml version="1.0" encoding="utf-8"?>
<UserControl
	x:Class="kartMania.FormsWPF.Controls.GameRoomsList" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Grid>
		<ListView
			Grid.Column="0"
			Grid.Row="0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Margin="42,274,0,0"
			Width="468"
			Height="226">
			<ListView.View>
				<GridView
					AllowsColumnReorder="true"
					ColumnHeaderToolTip="Player rooms">
					<GridViewColumn
						DisplayMemberBinding="{Binding Path=RoomName}"
						Header="Room name"
						Width="100" />
					<GridViewColumn
						DisplayMemberBinding="{Binding Path=PlayersCount}"
						Header="Players"
						Width="80" />
					<GridViewColumn
						DisplayMemberBinding="{Binding Path=TrackName}"
						Header="Track name"
						Width="100" />
					<GridViewColumn
						DisplayMemberBinding="{Binding Path=OwnerName}"
						Header="Owner"
						Width="100" />
					<GridViewColumn
						DisplayMemberBinding="{Binding Path=HasPassword}"
						Header="Password"
						Width="80" />
				</GridView>
			</ListView.View>
		</ListView>
	</Grid>
</UserControl>